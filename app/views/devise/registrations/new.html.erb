<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %><br />
  </div>
  <div>
    (姓)
  </div>
  <div>
  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>
  <div>
    (名)
  </div>
  <div>
  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, class: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
<!--     <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br /> -->
    <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録",class: "btn btn-success" %>
  </div>
<% end %>

<div>
  <h3>既に登録済みの方</h3><br>
  <nobr><%= render "devise/shared/links" %>
    からログインしてください</nobr>
</div>
